{% extends 'base.html.twig' %}

{% block title %}Liste des projets - TaskLinker
{% endblock %}

{% block body %}
	<main>
		<header>
			<div id="current-user"></div>
			<div id="title-page">
				<h1>Projets</h1>
			</div>
		</header>
		<div id="content">
			<div id="projects-container">
				{% for projet in projets %}
					<article class="card-project">
						<a href="{{ path("projet", {id: projet.id}) }}">
							<h2>{{ projet.title }}</h2>
						</a>
						<div class="card-project-icons">
							<a href="{{ path("editProjet", {id: projet.id}) }}">
								<i class="fa-solid fa-pen"></i>
							</a>
							<a href="{{ path("deleteProjet", {id: projet.id}) }}">
								<i class="fa-solid fa-trash"></i>
							</a>
							{# <form action="{{ path("deleteProjet", {id: projet.id}) }}" method="post">
							<input type="hidden" name="_method" value="DELETE">
								<button type="submit">
									<i class="fa-solid fa-trash"></i>
								</button>
							</form> #}
						</div>
					</article>
				{% endfor %}
				<article class="card-project">
					<a href="{{ path("createProjet") }}">
						<i class="fa-solid fa-circle-plus add-project-icon"></i>
						<h2>Ajouter un projet</h2>
					</a>
				</article>
			</div>
		</div>
	</main>
{% endblock %}
