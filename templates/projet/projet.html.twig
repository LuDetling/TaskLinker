{% extends 'base.html.twig' %}

{% block title %}
	{{ projet.title }}
	- TaskLinker
{% endblock %}

{% block body %}
	<main>
		<header>
			<div id="current-user"></div>
			<div id="title-page">
				<div class="flex-header">
					<h1>{{ projet.title }}</h1>
					<div class="user-list">
						{% for employe in employes %}
							<div class="avatar">{{ employe.getAvatar }}</div>
						{% endfor %}
					</div>
					<a class="button" href="{{ path('editProjet', {id: projet.id}) }}">Modifier</a>
				</div>
			</div>
		</header>
		<div id="content">
			<div id="tasks-container">
				{% include "/tache/tache.html.twig" %}
			</div>
		</div>
	</main>
{% endblock %}
